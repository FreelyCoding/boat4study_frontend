	export default {
		data() {
			return {
				searchValue: "",
				problemSet: [],
				problemSet_type_list_show: false,
				problemSet_type_list: [{
					name: '综合',
				}, {
					name: '计算机',
				}, {
					name: '经济金融'
				}, {
